<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayout"
    android:background="#FEE2BE"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_main_car"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:src="@drawable/car"
        />
        <!--android:src="@drawable/car_img"-->


    <TextView
        android:id="@+id/txtView_main_AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_main_car"
        android:layout_marginBottom="-100dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:padding="20dp"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:textSize="40sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInBtn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:fontFamily="cursive"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:backgroundTint="#F98181"
        android:textColor="@color/black"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpBtn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:fontFamily="cursive"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:backgroundTint="#F98181"
        android:textColor="@color/black"/>

</RelativeLayout>